<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c49388"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Fitur4Activity">

    <TextView
        android:id="@+id/Title5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/worksans"
        android:gravity="center_horizontal"
        android:text="Dampak Stunting"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDPen"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@id/Title5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button_white"
        android:fontFamily="@font/roboto"
        android:text="Dampak Jangka Pendek"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDPan"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@id/btnDPen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button_white"
        android:fontFamily="@font/roboto"
        android:text="Dampak Jangka Panjang"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</RelativeLayout>