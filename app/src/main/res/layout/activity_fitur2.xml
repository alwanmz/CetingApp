<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c49388"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Fitur2Activity">

    <TextView
        android:id="@+id/Title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/worksans"
        android:gravity="center_horizontal"
        android:text="Faktor Penyebab Stunting"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFaktorIn"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@id/Title4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button_white"
        android:fontFamily="@font/roboto"
        android:text="Faktor Internal"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFaktorEks"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@id/btnFaktorIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button_white"
        android:fontFamily="@font/roboto"
        android:text="Faktor Eksternal"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</RelativeLayout>